<h1>Add a new restaurant</h1>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.label :category %>
  <%= f.select :category, Restaurant::CATEGORIES %>

  <%= f.submit %>
<% end %>

<br>

<%= link_to "Back to restaurants", restaurants_path %>
